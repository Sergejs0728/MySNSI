<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".mysnsi.controllers.login.activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/gobackicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="SignUp"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:layout_marginTop="30dp"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center"/>-->
            <EditText
                android:id="@+id/signup_user_given_name_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="Name"
                android:textSize="18dp"
                android:paddingLeft="8dp"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:imeOptions="actionNext"
                android:singleLine="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/signup_family_name_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="Family name"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/signup_user_birthdate_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="Birthdate"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:imeOptions="actionNext"
                />

            <View
                android:id="@+id/signup_user_birthdate_lime_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />
            <EditText
                android:id="@+id/signup_user_email_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="E-Mail"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:imeOptions="actionNext"
                android:singleLine="true"
                />

            <View
                android:id="@+id/signup_user_email_line_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

             <Spinner
                android:id="@+id/signup_user_spinner_course_enroled_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"/>
            <View
                android:id="@+id/signup_user_spinner_course_enroled_line_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Spinner
                android:id="@+id/signup_user_spinner_country_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"/>
            <View
                android:id="@+id/signup_user_spinner_country_line_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />


            <EditText
                android:id="@+id/login_instructor_name_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="Instructor name"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />

            <View
                android:id="@+id/signup_instructor_name_line_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />


            <EditText
                android:id="@+id/login_card_number_id"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="Card number"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />

            <View
                android:id="@+id/signup_card_number_line_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />


            <Button
                android:id="@+id/signup_signup_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_bg_white"
                android:elevation="3dp"
                android:text="SIGNUP"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

