<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >

        <shiva.joshi.common.customs.CustomEditText
            android:id="@+id/alert_item"
            style="@style/check_list_add_new_item_alert_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/logbook_edit_text_background"
            android:hint="@string/check_list_new_item_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/black"

            />

    </LinearLayout>

</LinearLayout>
