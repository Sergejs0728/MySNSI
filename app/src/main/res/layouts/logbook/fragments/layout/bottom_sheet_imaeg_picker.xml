<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent"
    android:orientation="vertical"
    android:padding="16dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_photo_picker_background"
        android:orientation="vertical"
        >

        <shiva.joshi.common.customs.CustomTextView
            style="@style/photo_picker_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take a photo"
            />

        <shiva.joshi.common.customs.CustomTextView
            style="@style/photo_picker_header_sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use one of your photo, or take new one"
            />

        <shiva.joshi.common.customs.CustomTextView
            android:id="@+id/bottom_sheet_image_picker_photo_camera"
            style="@style/photo_picker_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:background="@drawable/bottom_sheet_photo_picker_text_back_ground"
            />

        <shiva.joshi.common.customs.CustomTextView
            android:id="@+id/bottom_sheet_image_picker_photo_gallery"
            style="@style/photo_picker_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo library"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_image_picker_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_sheet_photo_picker_background"
        android:orientation="vertical"
        >

        <shiva.joshi.common.customs.CustomTextView
            style="@style/photo_picker_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            />
    </LinearLayout>
</LinearLayout>

