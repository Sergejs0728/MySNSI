<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logback_dive_site_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/body_background"
            />

        <shiva.joshi.common.customs.CustomButton
            android:id="@+id/logback_take_picture_btn"
            style="@style/logbook_next_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:text="@string/take_a_picture"
            android:background="@drawable/logbook_next_button_background"
            />
    </LinearLayout>
</ScrollView>
